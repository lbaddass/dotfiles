[user]
    name = Jose Luis Garcia Orobio
    email = xpertasocial@gmail.com

[core]
    editor = nano
    autocrlf = input
    excludesfile = ~/.gitignore_global

[init]
    defaultBranch = main

[color]
    ui = auto

[alias]
    st = status -sb
    co = checkout
    br = branch
    cm = commit
    ca = commit -am
    lg = log --graph --decorate --oneline --all
    df = diff
    dc = diff --cached
    last = log -1 HEAD
    who = shortlog -sn
    rb = rebase
    fp = fetch --prune
    unstage = reset HEAD --

[pull]
    rebase = false

[push]
    default = current

[merge]
    ff = only

[status]
    short = true
